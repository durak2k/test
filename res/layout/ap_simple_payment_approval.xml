<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent" 
	android:layout_height="match_parent"
	android:orientation="vertical">

	<LinearLayout 
		android:layout_width="match_parent" 
		android:layout_height="match_parent"
		android:orientation="horizontal"
		android:layout_marginTop = "15px">

		<TextView android:id="@+id/sp_txt_approval_receiver_label"
			android:layout_width="100px" 
			android:layout_height="wrap_content"	
			android:text="Receiver: " />

		<TextView 
			android:id="@+id/sp_txt_approval_receiver"
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content"
			android:layout_marginLeft="50px"  />
	</LinearLayout>
	
	<LinearLayout 
		android:layout_width="match_parent" 
		android:layout_height="match_parent"
		android:orientation="horizontal"
		android:layout_marginTop = "15px"
		android:layout_marginBottom = "15px">

		<TextView android:id="@+id/sp_txt_approval_total_label"
			android:layout_width="100px" 
			android:layout_height="wrap_content"	
			android:text="Total: " />

		<TextView 
			android:id="@+id/sp_txt_approval_total"
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content"
			android:layout_marginLeft="50px"  />
	</LinearLayout>
	
	<Button 
		android:id="@+id/sp_btn_pay"
		android:layout_width="200px" 
		android:layout_height="wrap_content"
		android:layout_gravity="center"
		android:text="Pay" />
	<Button 
		android:id="@+id/sp_btn_cancel_payment"
		android:layout_width="200px" 
		android:layout_height="wrap_content"
		android:layout_gravity="center"
		android:text="Cancel" />
</LinearLayout>