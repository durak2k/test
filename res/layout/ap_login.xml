<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="horizontal"
    android:layout_marginTop = "20px" >

    <TextView
        android:id="@+id/txt_login_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="username:" />

    <EditText
        android:id="@+id/edit_login_username"
        android:layout_width="250px"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_login_username"
        android:layout_centerHorizontal="true"
        android:singleLine="true"
		android:text =	"seller_1_rambonn@gmx.de"/>

    <TextView
        android:id="@+id/txt_login_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edit_login_username"
        android:layout_centerHorizontal="true"
        android:text="password:" />

    <EditText
        android:id="@+id/edit_login_password"
        android:layout_width="250px"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_login_password"
        android:layout_centerHorizontal="true"
        android:password="true"
        android:singleLine="true" 
        android:text = 	"QREfgYpRCtZx40qH"/>

    <Button
        android:id="@+id/btn_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edit_login_password"
        android:layout_centerHorizontal="true"
        android:text="Login!" />

</RelativeLayout>